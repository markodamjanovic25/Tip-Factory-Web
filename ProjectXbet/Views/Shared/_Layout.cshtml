@model ProjectXbet.ViewModels.BaseViewModel
@{
    if (Model.TipTypeId == 0)
        Model.TipTypeId = 1;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Tip Factory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Aldrich">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/jquery.js"></script>
    @await Html.PartialAsync("_Favicons")
</head>
<body>
    <div class="container-fluid">
        
        <div class="nav-top-expanded" id="nav-top-expanded">
            <ul class="nav-expanded-items-holder" id="nav-expanded-items-holder">
                <li class="nav-top-expanded-item" id="sm-item-tips">
                    <a class="nav-link" asp-controller="Prediction" asp-action="Index" asp-route-TipTypeId="@Model.TipTypeId">
                        <img src="~/img/tipsFlag.svg" />
                        <h6 class="text-dark font-weight-bold ml-1">
                            Tips
                        </h6>
                    </a>
                </li>

                <li class="nav-top-expanded-item" id="sm-item-stats">
                    <a class="nav-link" asp-controller="Statistics" asp-action="Index" asp-route-TipTypeId="@Model.TipTypeId">
                        <img src="~/img/tipStatsFlag.svg" />
                        <h6 class="text-dark font-weight-bold ml-1">Stats</h6>
                    </a>
                </li>

                <li class="nav-top-expanded-item">
                    <a class="nav-link" asp-controller="About" asp-action="Instructions">
                        <h6 class="text-dark">Instructions</h6>
                    </a>
                </li>
                <li class="nav-top-expanded-item">
                    <a class="nav-link" asp-controller="About" asp-action="Accounts">
                        <h6 class="text-dark">Account upgrade</h6>
                    </a>
                </li>
                <li class="nav-top-expanded-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Contact">
                        <h6 class="text-dark">Contact</h6>
                    </a>
                </li>
                <li class="nav-top-expanded-item">
                    <a class="nav-link" asp-controller="About" asp-action="TermsAndConditions">
                        <h6 class="text-dark">Terms & conditions</h6>
                    </a>
                </li>
                <li class="nav-top-expanded-item" id="sm-item-account">
                    <a class="nav-link" asp-controller="Account" asp-action="Profile">
                        <h6 class="text-dark">Account</h6>
                    </a>
                </li>
                <li class="nav-top-expanded-item" id="sm-item-account">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <input type="submit" class="btn btn-logout float-right" value="Log out" />
                        </form>
                    </a>
                </li>
            </ul>
        </div>

        <nav class="tf-navbar">
            <div class="row">
                <div class="col-4">
                    <div class="col text-left">
                        <img src="~/img/LogoNav.svg" alt="Tip Factory" />
                    </div>
                </div>
                <div class="col-4 text-center">
                    <div class="row tip-type-holder">
                        @if (Model.TipTypeId == 1)
                        {
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="1">
                                    <img src="~/img/monotonousMediumActive.svg" alt="monotonous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="2">
                                    <img src="~/img/adventurousMediumInactive.svg" alt="adventurous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="3">
                                    <img src="~/img/ludicrousMediumInactive.svg" alt="ludicrous" />
                                </a>
                            </div>
                        }
                        else if (Model.TipTypeId == 2)
                        {
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="1">
                                    <img src="~/img/monotonousMediumInactive.svg" alt="monotonous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="2">
                                    <img src="~/img/adventurousMediumActive.svg" alt="adventurous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="3">
                                    <img src="~/img/ludicrousMediumInactive.svg" alt="ludicrous" />
                                </a>
                            </div>
                        }
                        else if (Model.TipTypeId == 3)
                        {
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="1">
                                    <img src="~/img/monotonousMediumInactive.svg" alt="monotonous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="2">
                                    <img src="~/img/adventurousMediumInactive.svg" alt="adventurous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="@Model.ControllerName" asp-action="Index" asp-route-TipTypeId="3">
                                    <img src="~/img/ludicrousMediumActive.svg" alt="ludicrous" />
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="col-4 text-center">
                                <a asp-controller="Prediction" asp-action="Index" asp-route-TipTypeId="1">
                                    <img src="~/img/monotonousMediumInactive.svg" alt="monotonous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="Prediction" asp-action="Index" asp-route-TipTypeId="2">
                                    <img src="~/img/adventurousMediumInactive.svg" alt="adventurous" />
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <a asp-controller="Prediction" asp-action="Index" asp-route-TipTypeId="3">
                                    <img src="~/img/ludicrousMediumInactive.svg" alt="ludicrous" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-4 text-right">
                    <div class="tf-navbar-hamburger text-center" id="hamburger" onclick="ExpandNavbar()">
                        <div class="tf-navbar-hamburger-lines-holder">
                            <div class="line" id="x-line-1"></div>
                            <div class="line" id="x-line-2"></div>
                            <div class="line" id="x-line-3"></div>
                        </div>
                    </div>
                    <div class="tf-navbar-items-holder">
                        <div class="tf-navbar-item border-right" id="lg-item-tips">
                            <a class="nav-link" asp-controller="Prediction" asp-action="Index" asp-route-TipTypeId="@Model.TipTypeId">
                                @if (Model.ControllerName == "Prediction")
                                {
                                    <span class="text-white nav-item-text" style="color:#F46036 !important; border-bottom: 5px solid #F46036 !important;">Tips</span>
                                }
                                else
                                {
                                    <span class="text-white nav-item-text">Tips</span>
                                }

                            </a>
                        </div>
                        <div class="tf-navbar-item border-right" id="lg-item-stats">
                            <a class="nav-link" asp-controller="Statistics" asp-action="Index" asp-route-TipTypeId="@Model.TipTypeId">
                                @if (Model.ControllerName == "Statistics")
                                {
                                    <span class="text-white nav-item-text" style="color:#F46036 !important; border-bottom: 5px solid #F46036 !important;">Stats</span>
                                }
                                else
                                {
                                    <span class="text-white nav-item-text">Stats</span>
                                }

                            </a>
                        </div>
                        <div class="tf-navbar-item dropdown" id="tf-navbar-item-dropdown">
                            <button class="btn btn-dropdown dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="nav-item-text">Miscellaneous</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Account</a>
                                <a class="dropdown-item" asp-controller="About" asp-action="Instructions">Instructions</a>
                                <a class="dropdown-item" asp-controller="About" asp-action="Accounts">Account upgrade</a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Contact">Contact</a>
                                <a class="dropdown-item" asp-controller="About" asp-action="TermsAndConditions">Terms & conditions</a>
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <input type="submit" class="btn btn-logout float-right" value="Log out" />
                                        </form>
                                    </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             
        </nav>
        <main role="main" class="pb-3">
            <div class="wrapper">
                @RenderBody()
            </div>
            <div class="text-dark" id="message-holder">
                <h5 class="text-dark" id="message"></h5>
            </div>
            @*@await Component.InvokeAsync("Betslip")*@
        </main>

        @*<footer class="footer text-muted">
                <div class="container-fluid text-center">
                    <div class="row">
                        <div class="col" style="height: 10vh;"><div class="d-none">&copy; 2020 - Tip Factory - <a class="mr-5" asp-controller="About" asp-action="TermsAndConditions">Terms</a></div></div>
                    </div>
                </div>
            </footer>*@

    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/msyscripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


